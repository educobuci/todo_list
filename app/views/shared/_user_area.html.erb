<div id="user">
  <div id="user_avatar">
    <%= image_tag current_user.avatar.to_s unless current_user.avatar.blank? %>
  </div>
  <div id="user_menu">
    <span><%= current_user.name %></span>
    <ul>
      <li><%= link_to 'sign out', destroy_user_session_path %></li> | 
      <li><%= link_to 'edit profile', edit_user_registration_path %></li>
    </ul>
  </div>
</div>