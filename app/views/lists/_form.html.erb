<%= form_for @list do |f| %>
  
  <% if @list.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@list.errors.count, "error") %> prohibited this author from being saved:</h2>

      <ul>
      <% @list.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <p><%= f.label :name, "Name your new list" %><br />
  <%= f.text_field :name %></p>
  
  <span>Items:</span>
  <%= f.fields_for :items do |item_form| %>
    <%= render 'item_fields', :f => item_form %>
  <% end %>
  
  <div>
    <%= link_to_add_fields 'Add new item', f, :items %>
  </div>
  
  <p><%= f.submit %></p>
  
<% end %>