<div id="my_lists">
  <div><%= image_tag @user.avatar.to_s unless @user.avatar.blank? %></div>
  <%= link_to 'Create new list',  new_list_url %>
  <% @user.lists.each do |list| %>
    <ul>
      <li><%= link_to list.name, edit_list_path(list) %></li>
    </ul>    
  <% end %>
</div>
<div id="feed">
  <%= link_to 'Browse the public lists', lists_path  %>
  
  <% @user.following.each do |l| %>
  <div class="following">
    <%= link_to "#{l.name}", list_path(l) %>
  </div>
  <% end %>
</div>